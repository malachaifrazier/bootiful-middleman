---
title: "Bootiful Middleman"
SEO_keywords:
auth_pages:
  - "Signup"
  - "Login"
  - "ForgotPassword"
---

<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="UTF-8">
    <!-- Use title if it's in the page YAML frontmatter -->

    <title><%= site.data.title || Bootiful Middleman %></title>

    <!-- For Bootstrap responsiveness -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="keywords" content="<%= current_page.data.SEO_keywords %>">
    <meta name="description" content="{{ SEO_description }}">
    <meta name="og:title" content="Bootiful | {{page_name}}">
    <meta name="og:description" content="{{ SEO_description }}">
    <meta name="og:image" content="https://res.cloudinary.com/bdavidxyz-com/image/upload/v1637305365/bootstrap/pages.png">
    <meta name="og:url" content="https://bootiful.org{{canonical_url}}">

    <link rel="icon" type="image/png" sizes="16x16" href="data:image/svg+xml;base64," />
    <%= stylesheet_link_tag "main" %>
    <% if canonical_url %>
      <link rel="canonical" href="https://bootiful.org{{canonical_url}}" />
    <% end %>
    <%= partial "partials/analytics" %>
  </head>

  <%# <body class="site {% if page_name in auth_pages %}bg-light{% endif %}"> %>
  <body class="<%= page_classes %>">
    <% unless page_name in site.data.auth_pages %>
      <%= partial "partials/header" %>
    <% end %>

    <main role="main">
      <%= yield %>
    </main>
    <%# <div class="main">
      {% block content %}{% endblock %}
    </div> %>

    <% if page_name in site.data.auth_pages %>
      <%= partial "partials/small_footer" %>
    <% else %>
      <%= partial "partials/footer.html" %>
    <% end %>

    <%# <script src="../assets/javascripts/main.js"></script> %>
    <%= javascript_include_tag "main" %>
  </body>
</html>
